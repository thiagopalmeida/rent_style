<div class="container" style="padding-top: 6rem; padding-bottom: 3rem; ">
  <div class="row">
    <div class="col-xs-12 col-sm-4 offset-sm-4">
      <div class="form-login">
        <h2>Entrar</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email",
                        placeholder: "desirre@lewagon.com" }%>
            <%= f.input :password, label: 'Senha',
                        required: false,
                        input_html: { autocomplete: "current-password",
                        placeholder: "**********"} %>
            <%= f.input :remember_me, label: 'Lembre-me',as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Entrar", class: "btn btn-primary" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


