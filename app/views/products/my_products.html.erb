<div class="" style="padding-top: 7rem;">
  <div class="">
    <div class="col-sm-18 col-md-12 table-responsive">
    <h3><strong>MEUS PRODUTOS:</strong></h3>
      <table class="table table-striped table-borderless">
         <thead>
            <th>Produto</th>
            <th>Categoria</th>
            <th>Marca</th>
            <th>Preço</th>
            <th>Disponibilidade</th>
          </thead>
          <tbody>
          <% @my_products.each do |product| %>
          <%# <tr class="clickable" onclick=""> %>
            <td><%= product.id%> - <%= product.description%> </td>
            <td><%= product.category%></td>
            <td><%= product.brand%></td>
            <td><%= product.price%></td>
            <td><% if product.available? %>
                  <%= "Disponível" %>
                <% else %>
                  <%= "Indisponível" %>
                <% end %>
            </td>
            <td>
              <%= link_to "Detalhar", product_path(product) %>
            </td>
            <td>
              <%= link_to "Editar", edit_product_path(product) %>
            </td>
            <td>
              <%= link_to 'Apagar', product_path(product), method: :delete,
                data: { confirm: "Confirma a exclusão do produto?"}, class: "" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <br>
    <h3><strong>HISTÓRICO DE TRANSAÇÕES:</strong></h3>
    <br>
    <p><strong>Aluguéis dos meus produtos:</strong></p>
    <table class="table table-striped table-borderless">
      <thead>
        <th>Produto</th>
        <th>Data</th>
        <th>Valor</th>
        <th>Forma de Pagamento</th>
      </thead>
      <tbody>
        <tr>
          <% @my_products_transactions.each do |transaction| %>
            <%# <td><%= transaction.product_id %>
            <td><%= transaction.product.id%> - <%= transaction.product.description %></td> 
            <td><%= transaction.created_at.strftime("%d/%m/%Y") %></td>
            <td><%= transaction.price %></td>
            <td><%= transaction.payment_method %></td>
          <% end %>
        </tr>

      </tbody>
    </table>
    <br>
    <p><strong>Produtos que aluguei:</strong></p>
    <table class="table table-striped table-borderless">
      <thead>
        <%# <th>Código</th> %>
        <th>Produto</th>
        <th>Data</th>
        <th>Valor</th>
        <th>Forma de Pagamento</th>
      </thead>
      <tbody>
        <% @my_transactions.each do |transaction| %>
        <tr>
          <%# <td><%= transaction.id %>
          <td><%= transaction.product.id%> - <%= transaction.product.description %></td>
          <td><%= transaction.created_at.strftime("%d/%m/%Y")%></td>
          <td><%= transaction.price %></td>
          <td><%= transaction.payment_method %></td>
        <% end %> 
        </tr>
      </tbody>
    </table>
  </div> 
</div>
<br><br>
