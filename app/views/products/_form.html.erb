<div class="container" style="padding-top: 6rem; padding-bottom: 3rem; ">
  <div class="row">
    <div class="col-xs-12 col-sm-6 offset-sm-3">
      <div class="form-login">
        <h2>Descrição do Produto</h2>
        <%= simple_form_for(@product) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

          <div class="form-inputs">
            <%= f.input :category, label: 'Categoria',
                        collection: [
                                      "Vestido", "Acessório",
                                      "Sapato Feminino", "Terno",
                                      "Acessório Masculino",
                                      "Sapato Masculino"
                                    ]%>
            <%= f.input :subcategory, label: 'Subcategoria',
                         collection: [
                                      "Camisa Social", "Blazer",
                                      "Calça Social", "Terninho",
                                      "Saia Midi", "Vesido Social",
                                      "Vestido de Festa", "Salto Alto",
                                      "Bijuterias", "Esporte Fino",
                                      "Black Tie", "Terno com colete",
                                      "Gravata", "Cinto"
                                      ]%>
            <%= f.input :brand, label: 'Marca'%>
            <%= f.input :size, label: 'Tamanho',
                         collection: ["PP", "P", "M", "G", "GG", "XG", "XXG", "Único"]%>

            <%= f.input :price, label: 'Preço'%>
            <%= f.input :description, label: 'Descrição'%>
            <%= f.input :photos, label: 'Fotos', as: :file, input_html: { multiple: true }%>

          </div>
          <div class="form-actions">
            <%= f.button :submit, 'Confirmar', class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
