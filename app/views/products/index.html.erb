<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Subcategory</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
        <tr>
          <td><%= product.category %></td>
          <td><%= product.subcategory %></td>
          <td><%= product.price %></td>
          <td><%= link_to product do %>
          <span>Link</span>
          <% end %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if policy(Product).create? %>
  <%= link_to 'New Product', new_product_path %>
<% end %>
