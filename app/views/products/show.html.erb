
<div class="container" style="padding-top: 6rem; padding-bottom: 3rem;">
<h1 class="text-center">Olha esse <%= @product.category %> que legal!</h1>
  <div class="container">
        <h3 class="text-center"><%= @product.description %></h2>
    <div class="row">
      <div class="col-4">
        <h4>Subcategoria: <%= @product.subcategory %></h5>
      </div>
      <div class="col-4">
        <h4>Marca: <%= @product.brand %></h4>
        <h4>Tamanho Disponível: <%= @product.size %></h4>
      </div>
        <div class="col-4">
        <h3>Preço: R$<%= @product.price %></h3>
      </div>
    </div>
  </div>
  <div class="row">
    <% if @product.photos.attached? %>
      <% @product.photos.each do |photo| %>
        <div class="col-4">
          <%= cl_image_tag photo.key, height: 400, width: 300, crop: :fill, class: "m-1" %>
        </div>
      <% end %>
    <% else %>
      <p>Não tem foto</p>
    <% end %>
    <%= link_to 'Eu quero', new_product_transaction_path(@product)%>
    <%= link_to 'Editar', edit_product_path(@product)%>
    <%= link_to 'Apagar', product_path(@product), method: :delete, 
    data: { confirm: "Confirma a exclusão do produto?"} %>

  </div>
</div>

