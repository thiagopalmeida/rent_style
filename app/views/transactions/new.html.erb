<div class="container" style="padding-top: 6rem; padding-bottom: 3rem;">
  <%= simple_form_for [@product, @transaction] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <br>
    <br>
    <% @transaction.price = @product.price %>
    <div class="price">Preço total: <strong>R$ <%= @transaction.price %></strong></div>
    <br>
    <br>
    <div class="form-inputs">
      <%= f.input :payment_method, collection: ['Cartão de Crédito', 'Transferência', 'Boleto'], label: 'Selecione o método de pagamento' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Confirmar', class: "btn btn-primary"%>
    </div>
  <% end %>
</div>
